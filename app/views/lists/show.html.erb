<h2><%= @list.name %></h2>

<%= link_to("Go back", lists_path) %>
<%= link_to("Add a movie", new_list_bookmark_path(@list) ) %>

<ul>
  <%= cl_image_tag @list.photo.key, height: 300, width: 400, crop: :fill %>
  <% @list.movies.each do |movie| %>
  <% bookmark = Bookmark.find_by(list: @list, movie: movie) %>
    <div>
      <li>
      <img src="<%= movie.poster_url %>" alt="Movie poster" style="width: 250px; height: 130px">
      <%= movie.title %>
      <%= movie.overview %>
      <%= bookmark.comment %>
      </li>
    </div>
  <% end %>
</ul>
